<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
                android:orientation="horizontal">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
    android:layout_weight="2.0"
    >
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent" android:layout_height="wrap_content"
        >
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Equipo1" android:id="@+id/EquipoName1"
            android:layout_weight="2.0" android:textStyle="bold"
                      android:gravity="center_horizontal"
            android:textColor = "#000000"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="60" android:layout_weight="2.0"
                      android:id="@+id/totalEquipo1"
            android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="3 puntos: " />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="10" android:id="@+id/puntos_tres_equipo1"/>

        </LinearLayout>

        <LinearLayout
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="2 puntos: " />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="10" android:id="@+id/puntos_dos_equipo1"/>

        </LinearLayout>

        <LinearLayout
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="1 punto:   " />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="10" android:id="@+id/puntos_uno_equipo1"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content"
    android:layout_weight="1.0"
    android:orientation="vertical">
        <TextView android:layout_width="match_parent" android:layout_height="match_parent"
                  android:gravity="center|top"
                  android:paddingTop="0dp"
                  android:textSize="25sp"
                  android:text="-"
                  android:layout_weight="1.0"/>
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
        android:id="@+id/fechagame" android:text="01/01/2019"/>


    </LinearLayout>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
    android:layout_weight="2.0">

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent" android:layout_height="wrap_content">

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="60" android:layout_weight="2.0"
                        android:id="@+id/totalEquipo2"
                      android:gravity="center"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="Equipo1" android:id="@+id/EquipoName2"
                      android:layout_weight="2.0" android:textStyle="bold"
                      android:gravity="center_horizontal"
                      android:textColor = "#000000"/>

        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
        >
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="3 puntos: " />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="10" android:id="@+id/puntos_tres_equipo2"/>

        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="2 puntos: " />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="10" android:id="@+id/puntos_dos_equipo2"/>

        </LinearLayout>

        <LinearLayout
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="1 punto:   " />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="10" android:id="@+id/puntos_uno_equipo2"/>

        </LinearLayout>



    </LinearLayout>



</LinearLayout>
