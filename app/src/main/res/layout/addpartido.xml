<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"

>


    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.0"
        >
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent" android:layout_height="wrap_content"
            >
                <EditText android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:hint="Equipo1" android:id="@+id/EquipoName1p"
                          android:layout_weight="2.0" android:textStyle="bold"
                          android:gravity="center_horizontal"
                          android:textColor = "#000000"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="0" android:layout_weight="2.0"
                          android:id="@+id/totalEquipo1p"
                          android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content" android:layout_height="wrap_content">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="3 puntos: " />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="0" android:id="@+id/puntos_tres_equipo1p"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content" android:layout_height="wrap_content">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="2 puntos: " />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="0" android:id="@+id/puntos_dos_equipo1p"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content" android:layout_height="wrap_content">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="1 punto:   " />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="0" android:id="@+id/puntos_uno_equipo1p"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content"
                      android:layout_weight="1.0"
                      android:orientation="vertical">
            <TextView android:layout_width="match_parent" android:layout_height="match_parent"
                      android:gravity="center|top"
                      android:paddingTop="0dp"
                      android:textSize="25sp"
                      android:text="-"
                      android:layout_weight="1.0"/>
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:id="@+id/fechagamep" />



        </LinearLayout>

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.0">

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent" android:layout_height="wrap_content">

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="0" android:layout_weight="2.0"
                          android:id="@+id/totalEquipo2p"
                          android:gravity="center"/>
                <EditText android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:hint="Equipo2" android:id="@+id/EquipoName2p"
                          android:layout_weight="2.0" android:textStyle="bold"
                          android:gravity="center_horizontal"
                          android:textColor = "#000000"/>

            </LinearLayout>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
            >
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="3 puntos: " />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="0" android:id="@+id/puntos_tres_equipo2p"/>

            </LinearLayout>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content" android:layout_height="wrap_content">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="2 puntos: " />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="0" android:id="@+id/puntos_dos_equipo2p"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content" android:layout_height="wrap_content">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="1 punto:   " />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="0" android:id="@+id/puntos_uno_equipo2p"/>

            </LinearLayout>



        </LinearLayout>

    </LinearLayout>

    <DatePicker android:layout_width="wrap_content" android:layout_height="213dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="40dp"
                android:id="@+id/fechapi"
    />
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="2.0">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0">
            <Button android:layout_width="match_parent" android:layout_height="0dp"
                    android:layout_weight="1.0"
                    android:id="@+id/puntos3_add_equipo1"

                    android:text="+"/>
            <Button android:layout_width="match_parent" android:layout_height="0dp"
                    android:layout_weight="1.0" android:text="-" android:id="@+id/puntos3_rest_equipo1"/>
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1.0"
            android:text="3 pts"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0">
            <Button android:layout_width="match_parent" android:layout_height="0dp"
                    android:layout_weight="1.0"
                    android:id="@+id/puntos2_add_equipo1"

                    android:text="+"/>
            <Button android:layout_width="match_parent" android:layout_height="0dp"
                    android:layout_weight="1.0" android:text="-" android:id="@+id/puntos2_rest_equipo1"/>
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1.0"
                      android:text="2 pts"/>
        </LinearLayout>

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0">
            <Button android:layout_width="match_parent" android:layout_height="0dp"
                    android:layout_weight="1.0"
                    android:id="@+id/puntos1_add_equipo1"

                    android:text="+"/>
            <Button android:layout_width="match_parent" android:layout_height="0dp"
                    android:layout_weight="1.0" android:text="-" android:id="@+id/puntos1_rest_equipo1"/>
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1.0"
                      android:text="1 pts"/>
        </LinearLayout>

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0">
            <Button android:layout_width="match_parent" android:layout_height="0dp"
                    android:layout_weight="1.0"
                    android:id="@+id/puntos3_add_equipo2"

                    android:text="+"/>
            <Button android:layout_width="match_parent" android:layout_height="0dp"
                    android:layout_weight="1.0" android:text="-" android:id="@+id/puntos3_rest_equipo2"/>
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1.0"
                      android:text="3 pts"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0">
            <Button android:layout_width="match_parent" android:layout_height="0dp"
                    android:layout_weight="1.0"
                    android:id="@+id/puntos2_add_equipo2"

                    android:text="+"/>
            <Button android:layout_width="match_parent" android:layout_height="0dp"
                    android:layout_weight="1.0" android:text="-" android:id="@+id/puntos2_rest_equipo2"/>
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1.0"
                      android:text="2 pts"/>
        </LinearLayout>

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0">
            <Button android:layout_width="match_parent" android:layout_height="0dp"
                    android:layout_weight="1.0"
                    android:id="@+id/puntos1_add_equipo2"

                    android:text="+"/>
            <Button android:layout_width="match_parent" android:layout_height="0dp"
                    android:layout_weight="1.0" android:text="-" android:id="@+id/puntos1_rest_equipo2"/>
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1.0"
                      android:text="1 pts"/>
        </LinearLayout>



    </LinearLayout>

    <Button
            android:id="@+id/addbtn"
            android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center_horizontal" android:text="Add"/>











</LinearLayout>
